<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <View
        android:id="@+id/selectCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="22rrr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"

        />

    <View
        android:id="@+id/categoryCircle1"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        android:backgroundTint="@color/core_red"
        app:layout_constraintEnd_toStartOf="@id/categoryCircle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectCircle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_goneMarginTop="12dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        />
    <View
        android:id="@+id/categoryCircle2"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        android:backgroundTint="@color/core_red"
        android:layout_marginStart="2dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/categoryCircle3"
        app:layout_constraintStart_toEndOf="@id/categoryCircle1"
        app:layout_constraintTop_toTopOf="@id/categoryCircle1"
            android:visibility="gone"
        />
    <View
        android:id="@+id/categoryCircle3"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        android:backgroundTint="@color/core_red"
        android:layout_marginStart="2dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/categoryCircle4"
        app:layout_constraintStart_toEndOf="@id/categoryCircle2"
        app:layout_constraintTop_toTopOf="@id/categoryCircle1"
        android:visibility="gone"
        />

    <View
        android:id="@+id/categoryCircle4"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        android:backgroundTint="@color/core_red"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/categoryCircle3"
        app:layout_constraintTop_toTopOf="@id/categoryCircle1"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

